<h1 class="body-title">Posts</h1>

<% @posts.each do |post| %>
  <div class="post-box">
    <div class='post-title-box'>
      <%= link_to post.title, post, :class => 'post-title' %><br>
    </div>
    <div class='post-body'>
      <%= post.body %>
    </div>
    <div class="author">
      <p>submitted by 
        <% if user_signed_in? %>
          <span class='author-username'><%= post.user.username %></span>
        <% else %>
          <span class='author-username'>anonymous</span>
        <% end %>
      </p>
    </div>
  </div>
<% end %>

<%= link_to "Create New Post", new_post_path, :class => 'new-post-link' %>