<%= form_with model: @post do |form| %>
<div class='new-form'>
  <div class='title-box'>
  <%= form.label :title, "Title:", :class => 'new-title'%>
  <%= form.text_field :title, :class => 'new-title-form'%>
  </div>
  <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  <div class='content-box'>
  <%= form.label :body, "Body:", :class => 'new-content'%>
  <%= form.text_area :body, :class => 'new-content-form'%>
  </div>
  <% @post.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  <%= form.submit :class => 'create-post-button'%>
</div>
<% end %>